<h2>Listing messages</h2>

<table class="table">
  <thead>
    <tr>
      <th>Document</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
<%= for message <- @messages do %>
    <tr>
      <td><%= message.document_id %></td>
      <td><%= message.body %></td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "New message", to: document_message_path(@conn, :new, @doc) %>
